<% include ./partials/header %>

<div>
  <div class="signup-form back mt-4 mb-4">

  <form action="/student/details" method="POST">
      <div class="centering">
          <div class="container">
             <h1 class="text-uppercase text-center mentor">Student Registration</h1>
                <div class="row">
         <div class="form-input name col col-12 col-md-6">
        <label for="first_name" class="required">Name</label>
         <input type="text" name="name" placeholder="Name" required autofocus class="form-control">
        </div>
      </div>
   <div class="row">
          <div class="form-input col col-12 col-md-6">
        <label for="first_name" class="required">Roll No</label>
        <input type="text" id="roll" name="rollno" onfocusout="updateYear()" placeholder="Roll No." required class="form-control">
         </div>
          <div class="form-input custom col col-12 col-md-6">
            <label>Year of study<sup>*</sup></label>
            <select class="form-control" name="year" id="year" disabled>
          <option value=""></option>
          <option value="check-roll">Check your roll number</option>
          <option value="5">5th</option>
          <option value="4">4th</option>
          <option value="3">3rd</option>
          <option value="2">2nd</option>
          <option value="1">1st</option>
        </select>
        <select class="form-control" id="year-hidden" name="year" hidden>
            <option value=""></option>
            <option value="check-roll">Check your roll number</option>
            <option value="5">5th</option>
            <option value="4">4th</option>
            <option value="3">3rd</option>
            <option value="2">2nd</option>
            <option value="1">1st</option>
          </select>
      </div>
       </div>

        <div class="row">
            
          <div class="form-input col col-12 col-md-6">
         <label for="email" class="required">Phone No.</label>
       <input type="text" name="phone" placeholder="Phone No." class="form-control" required pattern="[0-9]{10}">
        </div>
         
        </div>
        <br>
 <div class="buttoncustom col-md-6">
          <input type="submit" name="Register" value="Register" class="ui bg-dark button text-light myclass">
        </div>
    </div>
  </div>
  </form>
</div>
</div>

        <script type="text/javascript">
          $(".myclass").hover(function(){
            $(this).toggleClass("bg-dark");
            $(this).toggleClass("bg-success");
          });



        </script>
<script>
  function updateYear() {
    var roll = $('#roll').val();
    var map = new Map();
    map.set(1, '1');
    map.set(2, '2');
    map.set(3, '3');
    map.set(4, '4');
    map.set(5, '5');
    if ((roll.toLowerCase().search('iiitu') !== -1) && (roll.length === 10)) {
        $('#year').val(map.get(19 - parseInt(roll.split('')[5] + roll.split('')[6])));
        $('#year-hidden').val(map.get(19 - parseInt(roll.split('')[5] + roll.split('')[6])));
    } else if (roll.length === 5 || (roll.length === 7 && roll.toLowerCase().search('mi') !== -1)) {
        $('#year').val(map.get(19 - parseInt(roll.split('')[0] + roll.split('')[1])));
        $('#year-hidden').val(map.get(19 - parseInt(roll.split('')[0] + roll.split('')[1])));
    } else if (roll.length === 6 && roll.toLowerCase().search('18') === 0) {
        $('#year').val(map.get(19 - parseInt(roll.split('')[0] + roll.split('')[1])));
        $('#year-hidden').val(map.get(19 - parseInt(roll.split('')[0] + roll.split('')[1])));
    } else {
        $('#year').val('check-roll');
    }
}
</script>
<% include ./partials/footer %>